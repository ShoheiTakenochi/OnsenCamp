<div class="flex flex-col md:flex-row items-center justify-center min-h-screen space-x-0 md:space-x-10 px-4">
  <div class="hidden lg:block w-1/3">
    <%= image_tag "top.PNG" %>
  </div>

  <div class="w-full max-w-sm">
    <div class="bg-white shadow-md rounded-lg p-6 text-center">
      <h1 class="text-2xl font-mplus mb-4">パスワード再設定</h1>

      <%= form_with scope: :user, url: user_password_path, method: :post, data: { turbo: false }, local: true do |f| %>
        <div class="mb-3">
          <%= f.email_field :email, class: "w-full p-2 border border-gray-300 font-mplus rounded-md focus:ring-2 focus:ring-[#84A08E] focus:outline-none", placeholder: "登録済みメールアドレス" %>
        </div>

        <div>
          <%= f.submit "パスワードリセット用メールを送信", class: "w-full bg-[#84A08E] text-white font-mplus py-2 rounded-md hover:bg-[#687a6f] transition" %>
        </div>
      <% end %>

      <% if notice %>
        <p class="text-green-500 font-mplus text-sm mt-2"><%= notice %></p>
      <% elsif alert %>
        <p class="text-red-500 font-mplus text-sm mt-2"><%= alert %></p>
      <% end %>

      <%= link_to 'ログイン画面へ戻る', new_user_session_path, class: "text-sm font-mplus text-gray-600 hover:underline mt-4 block" %>
      <%= link_to "アカウントを作成する", new_user_registration_path, class: "text-sm font-mplus text-gray-600 hover:underline block" %>
    </div>
  </div>
</div>