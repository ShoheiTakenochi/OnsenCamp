<div class="flex flex-col md:flex-row items-center justify-center min-h-screen space-x-0 md:space-x-10 px-4">
  <div class="hidden lg:block w-1/3">
    <%= image_tag "top.PNG" %>
  </div>

  <div class="w-full max-w-sm">
    <div class="bg-white shadow-md rounded-lg p-6 text-center">
      <h1 class="text-2xl font-mplus mb-4">パスワード再設定</h1>

      <%= form_with model: resource, url: user_password_path, method: :put, local: true do |f| %>
        <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

        <% if resource.errors.any? %>
          <ul class="text-red-500 text-sm mb-4">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>
        
        <div class="mb-3">
          <%= f.password_field :password, class: "w-full p-2 border border-gray-300 font-mplus rounded-md focus:ring-2 focus:ring-[#84A08E] focus:outline-none", placeholder: "新しいパスワード" %>
        </div>

        <div class="mb-3">
          <%= f.password_field :password_confirmation, class: "w-full p-2 border border-gray-300 font-mplus rounded-md focus:ring-2 focus:ring-[#84A08E] focus:outline-none", placeholder: "パスワード確認" %>
        </div>

        <div>
          <%= f.submit "パスワードを更新", class: "w-full bg-[#84A08E] text-white font-mplus py-2 rounded-md hover:bg-[#687a6f] transition" %>
        </div>
      <% end %>

      <% if notice %>
        <p class="text-green-500 font-mplus text-sm mt-2"><%= notice %></p>
      <% elsif alert %>
        <p class="text-red-500 font-mplus text-sm mt-2"><%= alert %></p>
      <% end %>

      <%= link_to 'ログイン画面へ戻る', new_user_session_path, class: "text-sm font-mplus text-gray-600 hover:underline mt-4 block" %>
    </div>
  </div>
</div>