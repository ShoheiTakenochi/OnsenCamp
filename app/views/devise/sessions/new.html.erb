<div class="flex flex-col md:flex-row items-center justify-center min-h-screen space-x-0 md:space-x-10 px-4">
  <!-- 画像セクション（大画面のみ表示） -->
  <div class="hidden lg:block w-1/3">
    <%= image_tag "top.PNG" %>
  </div>

  <!-- ログインフォーム -->
  <div class="w-full max-w-sm">
    <div class="bg-white shadow-md rounded-lg p-6 text-center">
      <h1 class="text-2xl font-mplus mb-4">ログイン画面</h1>

      <%= form_with model: @user, url: user_session_path, data: { turbo: false } do |f| %>
        <!-- メール入力 -->
        <div class="mb-3">
          <%= f.email_field :email, class: "w-full p-2 border border-gray-300 font-mplus rounded-md focus:ring-2 focus:ring-[#84A08E] focus:outline-none", placeholder: "メールアドレス" %>
        </div>

        <!-- パスワード入力 -->
        <div class="mb-3">
          <%= f.password_field :password, class: "w-full p-2 border border-gray-300 font-mplus rounded-md focus:ring-2 focus:ring-[#84A08E] focus:outline-none", placeholder: "パスワード" %>
        </div>

        <!-- ログイン保持✅ボタン -->
        <div class="mb-3 text-laft">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "font-mplus text-sm text-gray-700" %>
        </div>

        <!-- ログインボタン -->
        <div>
          <%= f.submit "ログイン", class: "w-full bg-[#84A08E] text-white font-mplus py-2 rounded-md hover:bg-[#687a6f] transition" %>
        </div>
      <% end %>

      <!-- フラッシュメッセージ -->
      <% if notice %>
        <p class="text-green-500 font-mplus text-sm mt-2"><%= notice %></p>
      <% elsif alert %>
        <p class="text-red-500 font-mplus text-sm mt-2"><%= alert %></p>
      <% end %>

      <!-- パスワードリセット -->
      <a href="#" class="text-sm font-mplus text-gray-600 hover:underline mt-4 block">パスワードを忘れた？</a>
    </div>

    <!-- サインアップリンク -->
    <div class="bg-white shadow-md rounded-lg p-3 mt-4 text-center">
      <p class="text-gray-600 font-mplus">アカウントを持っていない？</p>
      <%= link_to "サインアップ", new_user_registration_path, class: "font-mplus text-[#84A08E] hover:underline" %>
    </div>
  </div>
</div>