<div class="flow-root w-full">
  <dl class="p-4 -my-3 divide-y divide-green-200 text-sm dark:divide-gray-700">
    <div class="grid grid-cols-1 gap-1 py-3 sm:grid-cols-3 sm:gap-4">
      <dd class="text-xl font-mplus font-bold text-gray-700 sm:col-span-2 dark:text-gray-200">
        Favorite
      </dd>
    </div>
  </dl>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-4">
    <% if @campsites.empty? %>
      <p class="text-gray-500 text-center mt-10 col-span-4">お気に入りのキャンプ場はまだありません。</p>
    <% else %>
      <% @campsites.each do |campsite| %>
        <div class="p-4 rounded-lg shadow-md bg-white">
          <% if campsite.images.attached? %>
            <%= image_tag "default_campsite.PNG", alt: "キャンプ場のデフォルト画像", class: "w-full h-[350px] object-cover rounded-lg" %>
          <% else %>
            <%= image_tag "default_campsite.PNG", alt: "キャンプ場のデフォルト画像", class: "w-full h-[350px] object-cover rounded-lg" %>
          <% end %>
          
          <dt class="mt-2 text-xl font-mplus font-bold text-gray-700 dark:text-gray-200">
            <%= link_to campsite.name, campsite_path(campsite), class: "block px-4 py-2 text-[#84A08E] hover:bg-gray-100", target: "_blank" %>
          </dt>

          <div class="mt-3 grid justify-between items-center">
            <%= button_to campsite_favorite_path(campsite), method: :delete, class: "flex items-center space-x-2 bg-white py-2.5 px-3 text-center text-sm font-medium text-secondary-700 shadow-sm hover:bg-gray-100" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
              <span>Unfavorite</span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<style>
  .main-image {
    width: 100%; /* これを追加 */
  }
  .main-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    object-fit: cover;
  }
</style>